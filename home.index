  <script>
    // Izolăm codul pentru a evita coliziuni și redeclarări
    (() => {
      const burgerBtn = document.getElementById('bp-burger');
      const mobile = document.getElementById('bp-mobile');
      const closeBtn = document.getElementById('bp-close');
      const yearEl = document.getElementById('bp-year');

      if (yearEl) yearEl.textContent = new Date().getFullYear();
      if (!burgerBtn || !mobile || !closeBtn) return; // siguranță dacă structura se schimbă

      // Evită dublarea listenerelor dacă scriptul e injectat de mai multe ori
      if (mobile.dataset.bound === '1') return;
      mobile.dataset.bound = '1';

      const open = () => mobile.classList.add('active');
      const close = () => mobile.classList.remove('active');

      burgerBtn.addEventListener('click', open);
      closeBtn.addEventListener('click', close);

      // Închide când se apasă pe oricare link din sheet
      mobile.querySelectorAll('.sheet a').forEach(a => a.addEventListener('click', close));

      // Închide când se face click pe backdrop-ul întunecat
      mobile.addEventListener('click', (e) => { if (e.target === mobile) close(); });

      // Închide cu tasta Escape
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') close(); });

      // Lazy fade-in pentru imagini
      const io = ('IntersectionObserver' in window) ? new IntersectionObserver((entries)=>{
        entries.forEach(entry=>{
          if(entry.isIntersecting){
            entry.target.classList.add('loaded');
            io.unobserve(entry.target);
          }
        })
      }, { rootMargin: '120px' }) : null;
      document.querySelectorAll('img.img-fade').forEach(img=>{
        if(io) io.observe(img); else img.classList.add('loaded');
      });

      // --- Teste UI rapide (opțional) ---
      function assert(c,m){ if(!c) throw new Error('TEST FAIL: '+m); console.log('TEST OK: '+m); }
      window.BP_TEST = { run: () => { try{
        open(); assert(mobile.classList.contains('active'),'mobile open');
        closeBtn.click(); assert(!mobile.classList.contains('active'),'close via button');
        open(); const firstLink = mobile.querySelector('.sheet a'); if(firstLink) firstLink.click(); assert(!mobile.classList.contains('active'),'close via link');
        open(); document.dispatchEvent(new KeyboardEvent('keydown',{key:'Escape'})); assert(!mobile.classList.contains('active'),'close via Escape');
        console.log('[BP] All tests passed ✅');
      } catch(e){ console.error(e); } } };
    })();
  </script>

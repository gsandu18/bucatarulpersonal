  <style>
    :root{
      --rubin: #0e5a43; /* verde rubin – nuanță premium */
      --rubin-2: #0b4a36;
      --negru: #000000;
      --alb: #ffffff;
      --gri-1:#f5f7f8;
      --gri-2:#e8ecee;
      --gri-3:#cfd6da;
      --text:#1c2226;
      --acc: var(--rubin);
      --shadow: 0 16px 48px rgba(0,0,0,.16);
      --radius-xl: 22px;
      --radius-lg: 16px;
      --radius-md: 12px;
    }
    *{box-sizing:border-box}
    html,body{margin:0}
    body{font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; color:var(--text); background:var(--alb); line-height:1.45;}
    a{color:inherit; text-decoration:none}
    img{max-width:100%; display:block}
    .container{width:min(1160px, 92%); margin:0 auto}

    /* Header */
    header{position:sticky; top:0; z-index:50; background:rgba(255,255,255,.75); backdrop-filter: blur(10px); border-bottom:1px solid var(--gri-2);}
    .nav{display:flex; align-items:center; justify-content:space-between; padding:14px 0}
    .brand{display:flex; align-items:center; gap:12px}
    .brand-logo-img{height:52px; width:auto; display:block}
    @media (max-width:980px){.brand-logo-img{height:42px}}
    .nav-links{display:flex; gap:22px; align-items:center}
    .nav-links a{font-weight:600; opacity:.9}
    .btn{display:inline-flex; align-items:center; gap:10px; padding:12px 18px; border-radius:999px; border:1px solid transparent; font-weight:700; cursor:pointer; transition: transform .15s ease}
    .btn:hover{transform:translateY(-1px)}
    .btn-primary{background:var(--rubin); color:var(--alb)}
    .btn-primary:hover{background:var(--negru)}
    .btn-ghost{border-color:var(--gri-3); background:#fff}
    .btn-ghost:hover{border-color:var(--rubin); color:var(--rubin)}

    /* Mobile menu */
    .burger{display:none; width:42px; height:42px; border-radius:12px; border:1px solid var(--gri-3); align-items:center; justify-content:center}
    @media (max-width: 980px){ .nav-links{display:none} .burger{display:flex} }

    /* Dropdown mobile */
    .mobile{position:fixed; inset:0; background:rgba(0,0,0,.45); backdrop-filter: blur(4px); display:none}
    .mobile.active{display:block}
    .sheet{position:absolute; right:0; top:0; height:100%; width:min(420px, 92%); background:#fff; padding:22px; box-shadow: var(--shadow); display:flex; flex-direction:column; gap:16px}
    .sheet a{padding:12px 8px; border-bottom:1px solid var(--gri-2); font-weight:600}

    /* Hero */
    .hero{position:relative; isolation:isolate}
    .hero-media{position:absolute; inset:0; z-index:-1; overflow:hidden}
    .hero-media::before{content:""; position:absolute; inset:0; background:linear-gradient(180deg, rgba(11,13,14,.65), rgba(11,13,14,.55) 20%, rgba(11,13,14,.2) 55%, rgba(11,13,14,.75));}
    .hero .content{padding:16vh 0 14vh; color:#f3f5f6}
    .kicker{display:inline-flex; align-items:center; gap:8px; padding:6px 12px; border-radius:999px; background:rgba(14,90,67,.12); color:#ffffff; border:1px solid rgba(14,90,67,.35); font-weight:700; letter-spacing:.25px}
    .hero h1{font-family:"Playfair Display", serif; font-size: clamp(36px, 6vw, 64px); line-height:1.05; margin:16px 0}
    .hero p{font-size: clamp(16px, 2.2vw, 20px); max-width:780px}
    .hero-cta{margin-top:26px; display:flex; gap:12px; flex-wrap:wrap}
    .hero-stats{display:flex; gap:18px; flex-wrap:wrap; margin-top:18px; opacity:.95}
    .chip{display:inline-flex; align-items:center; gap:8px; padding:8px 12px; border-radius:999px; background:rgba(0,0,0,.25); border:1px solid rgba(255,255,255,.25)}

    /* Generic sections */
    section{padding:64px 0; scroll-margin-top:90px}
    .section-title{font-family:"Playfair Display",serif; font-size: clamp(28px, 4.8vw, 40px); margin:0 0 14px}
    .muted{color:#58636b}
    .grid-3{display:grid; grid-template-columns: repeat(3, 1fr); gap:22px}
    @media (max-width: 980px){.grid-3{grid-template-columns:1fr}}
    .card{background:#fff; border:1px solid var(--gri-2); border-radius:var(--radius-xl); padding:22px; box-shadow: var(--shadow)}
    .step{display:flex; align-items:flex-start; gap:16px}
    .step .pic{width:64px; height:64px; border-radius:14px; background:#fff; border:1px solid var(--gri-2); display:grid; place-items:center; box-shadow: var(--shadow)}
    .step .pic svg{width:34px; height:34px; fill: var(--rubin)}
    

    /* Form – Vreau un bucătar */
    .form-wrap{display:grid; grid-template-columns:1.2fr .8fr; gap:22px; align-items:stretch}
    @media (max-width:980px){.form-wrap{grid-template-columns:1fr}}
    form{background:#fff; border:1px solid var(--gri-2); border-radius:var(--radius-xl); padding:22px; box-shadow: var(--shadow)}
    .form-row{display:grid; grid-template-columns: repeat(2, 1fr); gap:14px}
    .form-row.single{grid-template-columns:1fr}
    label{font-size:14px; font-weight:700; color:#3a444b}
    input, select, textarea{width:100%; padding:12px 14px; border-radius:12px; border:1px solid var(--gri-3); background:#fbfcfc}
    textarea{min-height:110px; resize:vertical}
    .aside{border:1px dashed var(--rubin); border-radius:var(--radius-xl); padding:20px; background:linear-gradient(135deg, #ffffff, #f6fbf8)}

    /* Bucătarii noștri */
    .chef-grid{display:grid; grid-template-columns: repeat(4, 1fr); gap:18px}
    @media (max-width:1200px){.chef-grid{grid-template-columns: repeat(3, 1fr)}}
    @media (max-width:860px){.chef-grid{grid-template-columns: repeat(2, 1fr)}}
    @media (max-width:560px){.chef-grid{grid-template-columns: 1fr}}
    .chef-card{position:relative; border:1px solid var(--gri-2); border-radius:20px; overflow:hidden; background:#fff; box-shadow: var(--shadow)}
    .chef-photo{aspect-ratio:1/1; background:#e9f3ef; display:grid; place-items:center; overflow:hidden}
    .chef-photo img{width:100%; height:100%; object-fit:cover; transform:scale(1.02); transition:transform .4s ease}
    .chef-card:hover .chef-photo img{transform:scale(1.08)}
    .chef-body{padding:14px}
    .tag{display:inline-block; font-size:12px; padding:6px 10px; border:1px solid var(--gri-3); border-radius:999px; margin-right:6px}

    /* Servicii vizuale */
    .service{display:flex; gap:18px; align-items:center; border:1px solid var(--gri-2); background:#fff; border-radius:18px; padding:16px; box-shadow: var(--shadow)}
    .service i{font-size:22px; background:var(--rubin); color:#fff; width:42px; height:42px; display:grid; place-items:center; border-radius:12px; box-shadow:0 6px 18px rgba(14,90,67,.3)}

    .menu-visual{display:grid; grid-template-columns: repeat(3, 1fr); gap:18px}
    @media (max-width:980px){.menu-visual{grid-template-columns:1fr}}
    .menu-card{position:relative; border-radius:22px; overflow:hidden; box-shadow: var(--shadow)}
    .menu-card .bg{position:absolute; inset:0;}
    .menu-card .bg img{width:100%; height:100%; object-fit:cover; filter:brightness(.75)}
    .menu-card .overlay{position:relative; padding:26px; color:#fff; display:flex; min-height:220px; align-items:flex-end}
    .menu-card h3{margin:0}

    /* Galerie */
    .gallery{display:grid; grid-template-columns:repeat(6,1fr); gap:10px}
    .gallery .item{position:relative; border-radius:14px; overflow:hidden}
    .gallery .item picture, .gallery .item img{display:block; width:100%; height:100%}
    .gallery .item.tall{grid-row: span 2}
    .gallery .item.wide{grid-column: span 2}
    @media (max-width: 980px){.gallery{grid-template-columns:repeat(3,1fr)} .gallery .item.tall{grid-row: span 1}}
    @media (max-width: 560px){.gallery{grid-template-columns:repeat(2,1fr)} }
    .img-fade{opacity:0; transform:scale(1.01); transition: opacity .4s ease, transform .4s ease}
    .img-fade.loaded{opacity:1; transform:scale(1)}

    /* Testimoniale */
    .testi{display:grid; grid-template-columns: repeat(3, 1fr); gap:18px}
    @media (max-width:980px){.testi{grid-template-columns:1fr}}
    .quote{background:#fff; border:1px solid var(--gri-2); border-radius:18px; padding:18px; box-shadow: var(--shadow)}

    /* Trust bar */
    .trust{display:flex; gap:28px; align-items:center; flex-wrap:wrap; opacity:.8}
    .trust img{height:26px}

    /* CTA Join */
    .cta{background:linear-gradient(135deg, var(--rubin), #000000); color:#eaf5ef; border-radius:24px; padding:28px; display:flex; gap:16px; align-items:center; justify-content:space-between; flex-wrap:wrap}
    .cta a.btn-ghost{background:transparent; color:#fff; border-color:rgba(255,255,255,.5)}

    /* Footer */
    footer{background:var(--negru); color:#cdd6dc; padding:48px 0 24px; margin-top:48px}
    .foot-grid{display:grid; grid-template-columns:2fr 1fr 1fr 1fr; gap:18px}
    @media (max-width:980px){.foot-grid{grid-template-columns:1fr 1fr}}
    @media (max-width:640px){.foot-grid{grid-template-columns:1fr}}
    .foot-logo{display:flex; align-items:center; gap:12px}
    .legal{border-top:1px solid #2c353b; margin-top:22px; padding-top:14px; font-size:13px; color:#99a5ad}

    /* Helpers */
    .chips{display:flex; gap:8px; flex-wrap:wrap}
    .sr-only{position:absolute; left:-9999px}
  </style>

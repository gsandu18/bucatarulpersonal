  <script src="https://cdn.jsdelivr.net/npm/ethers@5.7.2/dist/ethers.min.js"></script>
  <script>
    document.getElementById("connect-wallet").addEventListener("click", async () => {
      if (typeof window.ethereum !== 'undefined') {
        try {
          const provider = new ethers.providers.Web3Provider(window.ethereum);
          await provider.send("eth_requestAccounts", []);
          const signer = provider.getSigner();
          const address = await signer.getAddress();
          document.getElementById("wallet-address").innerText = "Wallet conectat: " + address;

          const signature = await signer.signMessage("Autentificare CHEF PRIVÃ‰ ID 2032");

          const formData = new FormData();
          formData.append('address', address);
          formData.append('signature', signature);

          const res = await fetch("verify.php", { method: "POST", body: formData });
          const text = await res.text();
          alert(text);

        } catch (err) {
          alert("Eroare la conectare: " + err.message);
        }
      } else {
        alert("InstaleazÄƒ MetaMask pentru a te conecta.");
      }
    });
  </script>
